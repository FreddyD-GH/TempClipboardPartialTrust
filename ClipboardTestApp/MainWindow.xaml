<Window x:Class="ClipboardTestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClipboardTestApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Get Clipboard Data"
                Padding="20 8"
                HorizontalAlignment="Left" Margin="131,73,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="131,176,0,0" Text="Result" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:Name="clipboardResultTextBox"
                 IsReadOnly="True"
                 HorizontalAlignment="Left" Margin="131,194,0,0" d:Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="232" Height="88"/>

    </Grid>
</Window>
